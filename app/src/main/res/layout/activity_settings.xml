<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".Controller.SettingsSave">

    <TextView
        android:id="@+id/lbDriverID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:text="Driver ID:"
        app:layout_constraintBottom_toTopOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />

    <EditText
        android:id="@+id/DriverID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="Driver ID"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:labelFor="@id/lbDriverID"
        android:text=""
        android:maxLines="1"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toEndOf="@+id/lbDriverID"
        app:layout_constraintVertical_bias="0.322" />

    <TextView
        android:id="@+id/lbShareEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="20dp"
        android:text="Share Email:"
        app:layout_constraintBottom_toTopOf="@+id/lbDriverID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />

    <EditText
        android:id="@+id/ShareEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="email@company.com"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:labelFor="@id/lbShareEmail"
        android:text=""
        android:maxLines="1"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@+id/lbDriverID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toEndOf="@+id/lbShareEmail"
        app:layout_constraintVertical_bias="0.322" />

    <TextView
        android:id="@+id/lbLockPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="20dp"
        android:text="Pass Code:"
        app:layout_constraintBottom_toTopOf="@+id/lbShareEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.33" />

    <EditText
        android:id="@+id/LockPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints="****"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:labelFor="@id/lbLockPass"
        android:text=""
        android:maxLines="1"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="@+id/lbShareEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toEndOf="@+id/lbLockPass"
        app:layout_constraintVertical_bias="0.322" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Save"
        android:textColor="@color/teal_200"
        app:layout_constraintBottom_toTopOf="@+id/scr_02_Main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/scr_02_Main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/scr_02_MainBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="18dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>